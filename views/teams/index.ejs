<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1 class="header" style="margin-top: 30px"><%= title %></h1>
  <hr>
  <h2>
    <a style="color: #FEF5ED" href="/teams/new">Add another team</a>
  </h2>
  <hr>

<div class="overall">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th>Players</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody>
      <% teams.forEach((team) => { %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.players %></td>
        <td><%= team.score %></td>
        <td><a style="color: #3E065F" href="/teams/<%= team._id %>/edit">EDIT</a></td>
        <td> - </td>
        <td>
          <form action="/teams/<%= team._id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-dark btn-lg" type="submit">Delete</button>
          </form>
        </td>
      </tr>
      

      <% }) %>
    </tbody>
  </table>
</div>
</main>

<%- include('../partials/footer') %>






